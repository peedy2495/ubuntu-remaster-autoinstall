  late-commands:
    - mount -t tmpfs -o size=512M tmpfs /mnt
    - wget -P /mnt -np -nd -l2 -r $(cat /cdrom/boot/grub/grub.cfg |grep s=|cut -d ";" -f 2|cut -d "=" -f 2|tr -d " -")/assets
    - chmod +x /mnt/*.sh
    - /mnt/setHost.sh
    - /mnt/modFsTab.sh
