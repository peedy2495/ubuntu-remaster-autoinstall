    - curtin in-target --target=/target -- apt-get --purge -y --quiet=2 autoremove
    - ln -fs /usr/share/zoneinfo/Europe/Berlin /target/etc/localtime
    - sed -i 's/ENABLED=1/ENABLED=0/' /target/etc/default/motd-news
